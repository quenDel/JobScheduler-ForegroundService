<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".MainActivity">

    <Button android:text="@string/start_foreground_service"
            android:onClick="startForegroundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:text="@string/stop_foreground_service"
            android:onClick="stopForegroundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:text="@string/start_job_service"
            android:onClick="startJobService"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:text="@string/stop_job_service"
            android:onClick="stopJobService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>